{
  "name": "chatflow",
  "version": "0.0.1-beta.0",
  "description": "A chat flow organizer for AI agents",
  "author": {
    "name": "Wlad Paiva",
    "email": "desenvolvedormg@gmail.com"
  },
  "module": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/index.ts"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "types": "./src/utils/index.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir=./dist",
    "format": "prettier --write .",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/debug": "^4.1.9",
    "@types/inquirer": "^9.0.4",
    "bun-types": "latest",
    "chalk": "^5.3.0",
    "husky": "^8.0.0",
    "inquirer": "^9.2.11",
    "nano-staged": "^0.8.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ai": "^2.2.14",
    "debug": "^4.3.4",
    "openai": "^4.11.1"
  },
  "nano-staged": {
    "*.{js,jsx,json,yml,yaml,css,ts,tsx,md,mdx}": "prettier --write"
  }
}
